{
  "description": "CLI commands for WOPR voice operations",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.3",
    "typescript": "^5.3.0"
  },
  "main": "index.js",
  "name": "@wopr-network/wopr-plugin-voice-cli",
  "scripts": {
    "build": "tsc",
    "check": "biome check src/ && tsc --noEmit",
    "dev": "tsc -w",
    "format": "biome format --write src/",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "prepublishOnly": "npm run build"
  },
  "type": "module",
  "version": "1.0.0",
  "wopr": {
    "plugin": {
      "category": "voice",
      "description": "Voice CLI commands (transcribe, synthesize, list, providers)",
      "name": "voice-cli",
      "type": "cli"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ]
}
