{
  "description": "CLI commands for WOPR voice operations",
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@types/node": "^25.2.3",
    "@wopr-network/plugin-types": "^0.2.1",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "name": "@wopr-network/wopr-plugin-voice-cli",
  "peerDependencies": {
    "wopr": "*"
  },
  "scripts": {
    "build": "tsc",
    "check": "biome check index.ts && tsc --noEmit",
    "dev": "tsc -w",
    "format": "biome format --write index.ts",
    "lint": "biome check index.ts",
    "lint:fix": "biome check --fix index.ts",
    "prepublishOnly": "npm run build",
    "test": "vitest run"
  },
  "type": "module",
  "version": "1.0.0",
  "wopr": {
    "plugin": {
      "category": "voice",
      "description": "Voice CLI commands (transcribe, synthesize, list, providers)",
      "name": "voice-cli",
      "type": "cli",
      "tags": ["voice", "cli", "tts", "stt", "transcription"],
      "icon": "terminal",
      "requires": {
        "capabilities": []
      },
      "provides": {
        "capabilities": [],
        "commands": ["voice"]
      },
      "lifecycle": {
        "init": true,
        "shutdown": true,
        "shutdownBehavior": "graceful"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "release": {
    "extends": "@wopr-network/semantic-release-config"
  }
}
